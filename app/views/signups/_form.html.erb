<h2>Activity Signup</h2>

<%= form_for @signup do |f| %>
    <% if flash[:signup_errors] %>
        <% flash[:signup_errors].each do |error| %>
            <%= error %>
        <% end %>
    <% end %>

    <p><%= f.label :camper_id %>
    <%= f.collection_select :camper_id, @campers, :id, :name %></p>
    <p><%= f.label :activity_id %>
    <%= f.collection_select :activity_id, @activities, :id, :name %></p>
    <p><%= f.label :time %>
    <%= f.number_field :time %></p>

    <p><%= f.submit %>
<% end %>