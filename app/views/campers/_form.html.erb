<h1>Welcome to Access Camp!</h1>

<h3>New Camper Signup</h3>

<%= form_for @camper do |f| %>
    <% if flash[:camper_errors] %>
        <% flash[:camper_errors].each do |error| %>
            <%= error %>
        <% end %>
    <% end %>
    
    <p><%= f.label :name %>
    <%= f.text_field :name %></p>
    <p><%= f.label :age %>
    <%= f.number_field :age %></p>

    <%= f.submit %>
<% end %>